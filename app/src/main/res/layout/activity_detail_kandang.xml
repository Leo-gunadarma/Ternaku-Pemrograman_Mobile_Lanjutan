<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailKandangActivity"
    android:background="@drawable/home">

    <androidx.cardview.widget.CardView
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/textViewDetailKandang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:gravity="center"
                android:text="@string/detail_data_kandang"
                android:textColor="@color/tema_aplikasi"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewDetailNamaKandang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/amaranth"
                android:text="@string/nama_kandang"
                android:textColor="@color/tema_aplikasi3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDetailKandang" />

            <TextView
                android:id="@+id/textViewDetailLokasiKandang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/amaranth"
                android:text="@string/lokasi_kandang"
                android:textColor="@color/tema_aplikasi3"
                app:layout_constraintStart_toStartOf="@+id/textViewDetailNamaKandang"
                app:layout_constraintTop_toBottomOf="@+id/textViewDetailNamaKandang" />

            <TextView
                android:id="@+id/textViewDetailLuasKandang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/amaranth"
                android:text="@string/luas_kandang_without_50"
                android:textColor="@color/tema_aplikasi3"
                app:layout_constraintStart_toStartOf="@+id/textViewDetailLokasiKandang"
                app:layout_constraintTop_toBottomOf="@+id/textViewDetailLokasiKandang" />

            <TextView
                android:id="@+id/textViewDetailKapasitasHewan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/amaranth"
                android:text="@string/kapasitas_hewan_without_detail"
                android:textColor="@color/tema_aplikasi3"
                app:layout_constraintStart_toStartOf="@+id/textViewDetailLuasKandang"
                app:layout_constraintTop_toBottomOf="@+id/textViewDetailLuasKandang" />

            <TextView
                android:id="@+id/textViewResultNamaKandang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:fontFamily="@font/amaranth"
                android:text="@string/tes"
                android:textColor="@color/tema_aplikasi3"
                app:layout_constraintStart_toEndOf="@+id/textViewDetailNamaKandang"
                app:layout_constraintTop_toTopOf="@+id/textViewDetailNamaKandang" />

            <TextView
                android:id="@+id/textViewResultLokasiKandang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amaranth"
                android:text="@string/tes"
                android:textColor="@color/tema_aplikasi3"
                app:layout_constraintStart_toStartOf="@+id/textViewResultNamaKandang"
                app:layout_constraintTop_toTopOf="@+id/textViewDetailLokasiKandang" />

            <TextView
                android:id="@+id/textViewResultLuasKandang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amaranth"
                android:text="@string/tes"
                android:textColor="@color/tema_aplikasi3"
                app:layout_constraintStart_toStartOf="@+id/textViewResultLokasiKandang"
                app:layout_constraintTop_toTopOf="@+id/textViewDetailLuasKandang" />

            <TextView
                android:id="@+id/textViewResultKapasitasKandang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amaranth"
                android:text="@string/tes"
                android:textColor="@color/tema_aplikasi3"
                app:layout_constraintStart_toStartOf="@+id/textViewResultLuasKandang"
                app:layout_constraintTop_toTopOf="@+id/textViewDetailKapasitasHewan" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>