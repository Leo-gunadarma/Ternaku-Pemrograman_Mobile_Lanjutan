<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="10dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_kotak"
            android:padding="1dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="87dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/banyak_hewan" />

            <TextView
                android:id="@+id/textViewNamaHewan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Nama Hewan"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewJumlahHewan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah Hewan"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="@+id/textViewNamaHewan"
                app:layout_constraintTop_toBottomOf="@+id/textViewNamaHewan" />

            <ImageView
                android:id="@+id/imageViewDetailHewan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/costum_ic_detail" />

            <ImageView
                android:id="@+id/imageViewDeleteHewan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toEndOf="@+id/imageViewEditHewan"
                app:layout_constraintTop_toTopOf="@+id/imageViewEditHewan"
                app:srcCompat="@drawable/costum_ic_delete" />

            <ImageView
                android:id="@+id/imageViewEditHewan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toEndOf="@+id/imageViewDetailHewan"
                app:layout_constraintTop_toTopOf="@+id/imageViewDetailHewan"
                app:srcCompat="@drawable/costum_ic_edit" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>